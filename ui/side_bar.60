SideBar := VerticalLayout {
	width: 185px;
	spacing: 20px;

	SearchBox {
		width: parent.width - 20px;
	}
	ScrollView {
		AppleMusic := Rectangle {
			Text { 
				text: "Apple Music"; 
				font-size: 12px;
				color: #6B6773;
			}
			Rectangle {
				y: 20px;
				VerticalLayout {
					x: 10px;
					spacing: 5px;
					// Each ov these text elemets coult by an element with an image and it needs to be clickable
					
					IconText { icon: @image-url("icons/100/play.png"); input: "Listen Now";  }
					IconText { icon: @image-url(""); input: "Browse"; }
					IconText { icon: @image-url(""); input: "Radio"; }
					}
				}
		}
	}
}
